[Unit]
Description=Upload pictures
Requires=network-online.target
# Optional tailscale-online@rockpro64.target
After=network-online.target
StartLimitIntervalSec=3min

[Service]
# Rclone
# ExecStart=/usr/bin/rclone --config=/etc/rclone/rclone.conf move /home/pi-camera/Pictures/ minio:pi-camera
# Immich
Environment="HOME=/root"
ExecStart=/root/.asdf/shims/immich upload --delete --recursive /home/pi-camera/Pictures/

[Install]
WantedBy=multi-user.target
